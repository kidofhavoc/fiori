<mvc:View controllerName="gumaeorder.gumaeorder.controller.main"

	xmlns="sap.ui.table"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core"
	xmlns:m="sap.m"
    height="100%">
	<m:Page
		showHeader="false"

		enableScrolling="false"
		class="sapUiContentPadding">
		<m:content>
			<m:ComboBox 
				id="comboBox1" 
				items="{test>/list}" 
				showClearIcon="true" 
				selectionChange=".onSelectionChange"> 
				<c:Item key="{test>name}" text="{test>name}" />
			</m:ComboBox>
			<!-- 위 콤보박스에 자재명을 넣을것 -->
			<Table
		        id="Table1"
				rows="{test>/list}"
				selectionMode="Single"
				paste="onPaste"
				ariaLabelledBy="title">
				<extension>
					<m:OverflowToolbar style="Clear">
						<m:Title id="title" text="구매오더 주문량 분석"/>
					</m:OverflowToolbar>
				</extension>
				<columns>
					<Column width="9rem">
						<m:Label text="구매오더번호" />
						<template>
							<m:Text text="{test>name}" wrapping="false" />
						</template>
                    </Column>
                    <Column width="9rem">
						<m:Label text="공급업체코드" />
						<template>
							<m:Text text="{test>test}" wrapping="false" />
						</template>
                    </Column>
				</columns>   
			</Table>
		</m:content>
	</m:Page>
</mvc:View>